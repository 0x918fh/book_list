{% extends "base.html.twig" %}

{% block body %}
	<a href="{{ path('author_edit') }}" class="btn btn-primary btn-sm">Добавить автора</a>
	<hr>
	<table class="table table-hover">
		{% for author in authors %}
			<tr>
				<td><a href="{{ path('author_edit', {id: author.id}) }}">{{ author.fam }} {{ author.nam }} {{ author.ots }}</a></td>
				<td>Количество книг: {{ author.bookCount }}</td>
			</tr>
		{% endfor %}
	</table>
{% endblock %}