<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Библиотека{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link href="{{ asset('css/main.css') }}" rel="stylesheet" />
        {% endblock %}
    </head>
    <body>
		<div id="wrap">
			<div id="head">
				<table border="0" width="100%">
					<tr>
						<td id="blockLogo">
							<a href="{{ path('homepage') }}"><img src="{{ asset('tmpl/logo.png') }}" /></a>
						</td>
						<td id="blockTitle">
							Библиотека
						</td>
					</tr>
				</table>
			</div>
			<div id="content">
				<div id="leftCol">
					{% block left %}
						<ul id="menu">
							<li><a href="{{ path('homepage') }}">Главная страница</a></li>
							<li><a href="{{ path('book_edit') }}">Добавить книгу</a></li>
							<li><a href="{{ path('authors') }}">Авторы</a></li>
							<li><a href="{{ path('info') }}">Информация о задании</a></li>
						</ul>
					{% endblock %}
				</div>
				<div id="mainCol">
					{% block body %}{% endblock %}
				</div>
			</div>
			<div class="clearfix"></div>
		</div>

		{% block javascripts %}
            <script src="{{ asset('js/jquery.js') }}"></script>
        {% endblock %}
    </body>
</html>
